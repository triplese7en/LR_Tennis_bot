{
  "_comment": "Example configuration for Tennis Court Booking Bot",
  
  "telegram_token": "YOUR_TELEGRAM_BOT_TOKEN",
  
  "credentials": {
    "username": "",
    "password": "",
    "auto_login": false
  },
  
  "browser": {
    "headless": true,
    "window_size": "1920,1080",
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "disable_images": false,
    "disable_javascript": false
  },
  
  "booking": {
    "base_url": "https://eservices.dp.ae/amenity-booking",
    "max_retries": 3,
    "retry_delay": 5,
    "page_timeout": 30,
    "element_timeout": 10,
    "implicit_wait": 5
  },
  
  "screenshots": {
    "enabled": true,
    "on_success": true,
    "on_failure": true,
    "on_error": true,
    "format": "png",
    "quality": 90
  },
  
  "notifications": {
    "on_success": true,
    "on_failure": true,
    "on_retry": false,
    "include_screenshot": true
  },
  
  "database": {
    "path": "data/bookings.db",
    "backup_enabled": true,
    "cleanup_days": 30
  },
  
  "advanced": {
    "concurrent_bookings": 1,
    "rate_limit_delay": 2,
    "user_agent_rotation": false,
    "proxy_enabled": false,
    "proxy_url": ""
  },
  
  "logging": {
    "level": "INFO",
    "file": "logs/bot.log",
    "max_size_mb": 10,
    "backup_count": 5,
    "console_output": true
  }
}
